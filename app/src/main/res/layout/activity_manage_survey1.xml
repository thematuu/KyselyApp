<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManageSurvey1Activity">
    <TextView
        android:id="@+id/changeSurveyTitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:textColor="#DE3789"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Survey1"
        android:gravity="center"
         />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/question_list_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/addQuestionButton"
            style="@style/AppTheme.Button1"
            android:text="Add" />

        <Button
            android:id="@+id/editQuestionButton"
            style="@style/AppTheme.Button1"
            android:text="Edit" />

        <Button
            android:id="@+id/deleteQuestionButton"
            style="@style/AppTheme.Button1"
            android:text="Delete" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:weightSum="3">

        <Button
            android:id="@+id/exportButton"
            style="@style/AppTheme.Button2"
            android:text="Export" />

        <Button
            android:id="@+id/showAnswersButton"
            style="@style/AppTheme.Button2"
            android:text="Show Answers" />

        <Button
            android:id="@+id/delete_survey1_answers_button"
            style="@style/AppTheme.Button2"
            android:text="Delete All Answers for Survey1" />

    </LinearLayout>

</LinearLayout>
